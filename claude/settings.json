{
  "attribution": {
    "commit": "\n\nCo-Authored-By: Claude <noreply@anthropic.com>",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "WebSearch",
      "WebFetch(domain:docs.databricks.com)",
      "WebFetch(domain:community.databricks.com)",
      "WebFetch(domain:docs.ray.io)",
      "WebFetch(domain:docs.vllm.ai)",
      "WebFetch(domain:docs.unitycatalog.io)",
      "WebFetch(domain:python.langchain.com)",
      "WebFetch(domain:docs.langchain.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:arxiv.org)",
      "Bash(uv:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pytest:*)",
      "Bash(databricks:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git worktree:*)",
      "Bash(git remote:*)",
      "Bash(git submodule:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(du:*)",
      "Bash(curl:*)",
      "Bash(env)",
      "Bash(npm run:*)",
      "Bash(npm install)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(claude mcp:*)",
      "Skill(databricks-local-notebook)",
      "Skill(databricks-asset-bundle)",
      "Skill(databricks-agent-app-builder)",
      "Skill(skill-creator)",
      "Skill(cross-platform-skill)",
      "Skill(git-worktree)",
      "mcp__filesystem__list_allowed_directories",
      "mcp__filesystem__directory_tree",
      "mcp__filesystem__list_directory",
      "mcp__filesystem__read_multiple_files",
      "mcp__filesystem__read_text_file"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)"
    ],
    "additionalDirectories": [
      "~/workspace",
      "~/Downloads"
    ]
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude is waiting for input' -sound default"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude needs permission' -sound default"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "git-worktree@custom-git-skills": true
  },
  "alwaysThinkingEnabled": true
}
